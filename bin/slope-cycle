#!/usr/bin/env bash
set -euo pipefail
[ -z ${7+x} ] && (
    echo "USAGE: <slope+xy:double> <slope+xz:double> <slope+yz:double>"
    echo "       <cycle:int(0|1)>"
    echo "       <source_directory:str> <target_directory:str>"
    echo "       <(JPEG|PNG|TIFF)>"
    false)
/usr/bin/env mvn -e -q exec:java \
    -D'exec.mainClass'='ca.petrographic.mains.SlopeCycle' \
    -D'exec.args'="$1 $2 $3 $4 $5 $6 $7"
